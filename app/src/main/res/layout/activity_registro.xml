<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00BCD4"
    tools:context=".Actividades.RegistroActivity">

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/ic_place"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:hint="Area"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/fecha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/ic_calendar"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:hint="Fecha (DD/MM/AA)"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/inicioHora"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/ic_time"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:hint="Inicio Hora (HH:MM)"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/finHora"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/ic_time"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:hint="Fin Hora (HH:MM)"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/telefono"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/ic_phone"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:hint="Telefono"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/empleado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/ic_user"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:hint="Nombre de la reservacion"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/actividad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/ic_work"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:hint="Actividad a realizar"
        android:inputType="text"
        />



        <Button
            android:id="@+id/agregarBTN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Agregar"
            android:background="#4CAF50"
            android:layout_margin="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/cancelarBTN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancelar"
            android:background="#F44336"
            android:layout_margin="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18dp"/>
</LinearLayout>
 </ScrollView>
</LinearLayout>